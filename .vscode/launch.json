{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Package",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${fileDirname}"
        },
        {
            "name": "Launch Scheduler Server",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "cmd/servers/scheduler/scheduler.go",
            "envFile": "${workspaceFolder}/env/scheduler.env",
        },
        {
            "name": "Launch Business Server",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "cmd/servers/business/business.go",
            "envFile": "${workspaceFolder}/env/business.env",
        },
        {
            "name": "Launch Scheduler Client",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "cmd/clients/scheduler/client.go"
        },
         {
            "name": "Launch Business Client",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "cmd/clients/business/client.go"
        },
        {
            "name": "Launch batch worker",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "cmd/workers/batch/worker.go",
            "envFile": "${workspaceFolder}/env/batch.env",
        },
        {
            "name": "Test observability",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "cmd/observability/obs.go",
            "envFile": "${workspaceFolder}/env/obs.env",
        }
    ]
}