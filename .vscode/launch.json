    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Package",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${fileDirname}"
        },
        {
            "name": "Launch Server",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "cmd/scheduler/scheduler.go",
            "envFile": "${workspaceFolder}/env/local.env",
        },
        {
            "name": "Launch Client",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "cmd/client/client.go"
        },
        {
            "name": "Launch batch worker",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "cmd/batch_worker/worker.go",
            "envFile": "${workspaceFolder}/env/batch.env",
        }
    ]
}